<Window x:Class="OpenCVCamSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:OpenCVCamSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Name="CaptureScreen" Grid.Row="0" Source="{Binding CaptureModel.ScreenData}" Width="{Binding CaptureModel.FrameWidth}" Height="{Binding CaptureModel.FrameHeight}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Content="켜기" Padding="5,0" Margin="5,0" Command="{Binding CaptureCommand}" />
            <Button Content="녹화" Padding="5,0" Margin="5,0"/>
            <Button Content="캡쳐" Padding="5,0" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
